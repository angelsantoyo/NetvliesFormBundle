{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $(document).ready(function() {
            $('form').attr('novalidate', 'novalidate');

            $('.form_success_action').change(function() {
                $('.form_success_url').parent().parent().toggle(this.value === 'redirect');
                $('.form_success_message').parent().parent().toggle(this.value !== 'redirect');
            }).change();

            $('.form_mail_toggle').click(function() {
                $('.form_mail_related').parent().parent().toggle(this.checked);
            }).change();
        })
    </script>

{% endblock %}
